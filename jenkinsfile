pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Athrv45/practice.git'
            }
        }

        stage('Build') {
            steps {
                sh 'echo "Building the project..."'
            }
        }

        stage('Test') {
            steps {
                sh 'python -m unittest discover -s ./ -p "test_hello.py"'
            }
        }
    }
}
